<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cours.alexandre.podometre.MainActivity">

    <TextView
        android:text="Définir longueur du pas :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextInfo"
        android:layout_marginTop="26dp"
        tools:text="Définir longueur du pas :"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ouvrir la carte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Map"
        android:onClick="onClick (MainActivity)"
        android:layout_below="@+id/longPas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

    <TextView
        android:text="mètre(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/longPas"
        android:layout_alignBottom="@+id/longPas"
        android:layout_toRightOf="@+id/longPas"
        android:layout_toEndOf="@+id/longPas" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:id="@+id/longPas"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/TextInfo"
        android:layout_alignLeft="@+id/TextInfo"
        android:layout_alignStart="@+id/TextInfo"
        android:textAlignment="center" />

</RelativeLayout>
